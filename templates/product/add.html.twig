{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block body %}

<div class="container">
    {{ form_start(form) }}

    {{ form_row(form._token) }}

    {{ form_label(form.nom, 'nom produit') }}
    {{ form_widget(form.nom,{'attr':{'maxlength':'50'}}) }}

    {{ form_label(form.prix, 'Prix produit') }}
    {{ form_widget(form.prix,{'attr':{'maxlength':'50'}}) }}

    {{ form_label(form.image, '') }}
    {{ form_widget(form.image,{'attr':{'maxlength':'255'}}) }}

    {{ form_label(form.category, 'Cat√©gorie') }}
    {{ form_widget(form.category)}}

    {{ form_label(form.save, 'Ajouter produit') }}
    {{ form_widget(form.save) }}

    {{ form_end(form, { 'render_rest': false}) }}
</div>
{% endblock %}